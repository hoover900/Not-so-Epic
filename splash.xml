<theme>
	<formatVersion>7</formatVersion>
	<include subset="colorset" name="Blue" displayName="${blue}">./_art/colors/blue.xml</include>
	<include subset="colorset" name="Red" displayName="${red}">./_art/colors/red.xml</include>
	<include subset="colorset" name="Green" displayName="${green}">./_art/colors/green.xml</include>
	<include subset="colorset" name="Yellow" displayName="${yellow}">./_art/colors/yellow.xml</include>
	<include subset="colorset" name="Violet" displayName="${violet}">./_art/colors/violet.xml</include>
	<include subset="colorset" name="Cyan" displayName="${cyan}">./_art/colors/cyan.xml</include>
	<include subset="colorset" name="Orange" displayName="${orange}">./_art/colors/orange.xml</include>

<view name="splash">
		<splash name="splash">
			<backgroundColor>161616</backgroundColor>
		</splash>
		<image name="background">
			<path>./_art/splash/splash.jpg</path>
		</image>

		<image name="progressbar">
			<origin>0 0</origin>
			<pos>0.2005208333333333 0.9</pos>
			<size>0.5989583333333333 0.0092592592592593</size>
			<path>./_art/splash/progressbar.png</path>
			<color>363636FF</color>
			<roundCorners>0</roundCorners>
			<zIndex>6</zIndex>
		</image>

		<image name="progressbar:active">
			<tile>true</tile>
			<path>./_art/images/progressbar.png</path>
			<color>${baseColor}</color>
			<colorEnd>${gradientEndColor}</colorEnd>
			<gradientType>horizontal</gradientType>
			<zIndex>7</zIndex>
		</image>

		<text name="label">
			<color>FFFFFFFF</color>
			<fontPath>./_art/Acre.otf</fontPath>
			<color>d9d9d9</color>
			<glowColor>000000</glowColor>
			<glowSize>4</glowSize>
		</text>
	</view>
</theme>